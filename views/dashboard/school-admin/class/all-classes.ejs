<!doctype html>
<html class="no-js" lang="ar">

<%- include('../../../partials/head.ejs') %>

<body class="rtl">

  <div class="bmd-layout-container bmd-drawer-f-l avam-container animated bmd-drawer-in">

    <%- include('../../../partials/header.ejs') %>

    <div id="dw-s1" class="bmd-layout-drawer bg-faded">
      <%- include('../../../partials/sidebar/index.ejs') %>
    </div>

    <main class="bmd-layout-content">
      <div class="container-fluid">

        <!-- breadcrumb -->
        <div class="row m-1 pb-4 mb-3">
          <div class="col-12 p-2">
            <div class="page-header breadcrumb-header d-flex justify-content-between align-items-end">
              <div>
                <h3 class="lite-text">جميع الفصول</h3>
                <span class="lite-text text-gray">عرض كل الفصول الموجودة في المدرسة</span>
              </div>
              <div>
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="/dashboard"><i class="fas fa-home"></i></a></li>
                  <li class="breadcrumb-item active">الفصول</li>
                </ol>
              </div>
            </div>
          </div>
        </div>

        <!-- جدول عرض الفصول -->
        <div class="row m-1">
          <div class="col-12 p-2">
            <div class="card shade h-100">
              <div class="card-header d-flex justify-content-between align-items-center">
                <span>قائمة الفصول</span>
                <a href="/school-admin/classes/create" class="btn btn-primary btn-sm">إضافة فصل جديد</a>
              </div>
              <div class="card-body">

                <!-- Flash messages -->
                <% if (locals.success && locals.success.length > 0) { %>
                  <div class="alert alert-success"><%= success %></div>
                <% } %>
                <% if (locals.error && locals.error.length > 0) { %>
                  <div class="alert alert-danger"><%= error %></div>
                <% } %>

             <!-- البحث الداخلي -->
<div class="mb-3" style="max-width: 400px;">
  <input 
    type="text" 
    id="searchName" 
    class="form-control" 
    style="width: 100%; padding: 0.5rem 1rem; font-size: 1rem;" 
    placeholder="بحث باسم الفصل"
  >
</div>

<div class="table-responsive">
                <table class="table table-bordered table-hover" id="classesTable">
                  <input type="hidden" id="csrfToken" value="<%= csrfToken %>">

                  <thead class="thead-light text-center">
                    <tr>
                      <th>#</th>
                      <th>اسم الفصل</th>
                      <th>الحالة</th>
                      <th>عدد الشعب</th>
                      <th>العمليات</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% classes.forEach((cls, index) => { %>
                      <tr>
                        <td><%= index + 1 %></td>
                        <td class="cls-name"><%= cls.name %></td>
                        <td class="cls-status"><%= cls.status === 'active' ? 'نشط' : 'غير نشط' %></td>
                        <td><%= cls.sections.length %></td>
                       <td class="text-center">
  <div class="btn-group btn-group-sm" role="group">
    <a 
      href="/school-admin/classes/<%= cls._id %>/edit"
      class="btn btn-warning">
      تعديل
    </a>

    <a 
      href="/school-admin/classes/<%= cls._id %>/sections"
      class="btn btn-info">
      عرض الشعب
    </a>

    <button
      type="button"
      class="btn btn-danger btn-delete-class"
      data-id="<%= cls._id %>"
      data-name="<%= cls.name %>">
      حذف
    </button>
  </div>
</td>

                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>

              </div>
            </div>
          </div>
        </div>

      </div>
    </main>

  </div>
<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteClassModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title">تأكيد حذف الفصل</h5>
      </div>
      <div class="modal-body">
        <p>
          هل أنت متأكد من حذف الفصل
          <strong id="classNameToDelete"></strong>؟
        </p>
        <p class="text-danger">
          ⚠️ سيتم حذف:
          <br>• الفصل
          <br>• جميع الشعب
          <br>• جميع الطلاب
          <br>• ربط أولياء الأمور
          <br>• جميع الحضور والدرجات والامتحانات المرتبطة
          <br>• جميع المواد والمعلمين المرتبطين
          <br>• جميع المستخدمين المرتبطين
          
        </p>
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" data-dismiss="modal">إلغاء</button>
        <button class="btn btn-danger" id="confirmDeleteClass">
          نعم، حذف
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Loader -->
<div class="modal fade" id="loadingModal" tabindex="-1"
data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content text-center p-4">
      <div class="spinner-border text-danger mb-3"></div>
      <h5>جاري حذف الفصل...</h5>
      <p class="text-muted">يرجى عدم إغلاق الصفحة</p>
    </div>
  </div>
</div>

  <%- include('../../../partials/scripts.ejs') %>

  <script>
    // بحث داخلي بدون ريلود
    const searchName = document.getElementById('searchName');
    const searchStatus = document.getElementById('searchStatus');
    const table = document.getElementById('classesTable');
    const rows = Array.from(table.querySelectorAll('tbody tr'));

    function filterRows() {
      const nameValue = searchName.value.trim().toLowerCase();
      const statusValue = searchStatus.value;

      rows.forEach(row => {
        const nameText = row.querySelector('.cls-name').textContent.toLowerCase();
        const statusText = row.querySelector('.cls-status').textContent === 'نشط' ? 'active' : 'inactive';

        if ((nameText.includes(nameValue)) && (statusValue === '' || statusValue === statusText)) {
          row.style.display = '';
        } else {
          row.style.display = 'none';
        }
      });
    }

    searchName.addEventListener('input', filterRows);
    searchStatus.addEventListener('change', filterRows);
  </script>
<script>
let classIdToDelete = null;

document.querySelectorAll('.btn-delete-class').forEach(btn => {
  btn.addEventListener('click', () => {
    classIdToDelete = btn.dataset.id;
    document.getElementById('classNameToDelete').textContent = btn.dataset.name;
    $('#deleteClassModal').modal('show');
  });
});

document.getElementById('confirmDeleteClass').addEventListener('click', async () => {
  $('#deleteClassModal').modal('hide');
  $('#loadingModal').modal('show');

  try {
    const res = await fetch(`/school-admin/classes/${classIdToDelete}`, {
      method: 'DELETE',
      headers: {
        'CSRF-Token': document.getElementById('csrfToken')?.value
      },
      credentials: 'same-origin'
    });

    const data = await res.json();
    $('#loadingModal').modal('hide');

    if (data.error) {
      alert(data.error);
    } else {
      alert(data.success);
      location.reload();
    }

  } catch (err) {
    $('#loadingModal').modal('hide');
    alert('حدث خطأ أثناء حذف الفصل');
  }
});
</script>

</body>
</html>
