<!doctype html>
<html class="no-js" lang="ar">
<%- include('../../../partials/head.ejs') %>

<body class="rtl">
<div class="bmd-layout-container bmd-drawer-f-l avam-container animated bmd-drawer-in">
<%- include('../../../partials/header.ejs') %>

<div id="dw-s1" class="bmd-layout-drawer bg-faded">
  <%- include('../../../partials/sidebar/index.ejs') %>
</div>

<main class="bmd-layout-content">
<div class="container-fluid">

  <!-- Breadcrumb -->
  <div class="row m-1 pb-4 mb-3">
    <div class="col-12 p-2">
      <div class="page-header breadcrumb-header d-flex justify-content-between align-items-center">
        <div>
          <h3 class="lite-text mb-1">شعب فصل <%= classData.name %></h3>
          <span class="lite-text text-gray">عرض جميع الشعب التابعة لهذا الفصل</span>
        </div>
        <div>
          <a href="/school-admin/classes" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> العودة للفصول
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- جدول الشعب -->
  <div class="row m-1">
    <div class="col-12 p-2">
      <div class="card shade h-100">
        <div class="card-header">
          قائمة الشعب
          <a href="/school-admin/sections/create" class="btn btn-success btn-sm float-left">إضافة شعبة جديدة</a>
        </div>
        <div class="card-body">
          <div class="table-responsive">
          <table class="table table-bordered table-hover text-center">
            <thead class="thead-light">
              <tr>
                <th>#</th>
                <th>اسم الشعبة</th>
                <th>عدد الطلاب</th>
                <th>العمليات</th>
              </tr>
            </thead>
            <tbody>
              <% if(sections.length === 0){ %>
                <tr>
                  <td colspan="4">لا توجد شعب مضافة</td>
                </tr>
              <% } %>

              <% sections.forEach((section, index) => { %>
                <tr>
  <td><%= index + 1 %></td>
  <td><%= section.name %></td>
  <td><%= section.studentsCount %></td>

  <!-- ✅ عمود العمليات (واحد فقط) -->
<td class="d-flex justify-content-center align-items-center">
  <div class="d-flex align-items-center" style="gap: 0.5rem;">

    <!-- زر عرض الطلاب -->
    <a
      href="/school-admin/sections/<%= section._id %>/students"
      class="btn btn-sm btn-info"
    >
      عرض الطلاب
    </a>

    <% if (section.studentsCount > 0) { %>
      <!-- رسالة التحذير -->
      <span class="badge badge-danger">
        تحتوي على طلاب
      </span>
    <% } else { %>
      <!-- زر الحذف -->
      <form
        action="/school-admin/sections/<%= section._id %>?_method=DELETE"
        method="POST"
        onsubmit="return confirm('هل أنت متأكد من حذف هذه الشعبة؟');"
        class="m-0"
      >
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button type="submit" class="btn btn-sm btn-danger">
          حذف
        </button>
      </form>
    <% } %>

  </div>
</td>


</tr>

              <% }) %>
            </tbody>
          </table>
          </div>

        </div>
      </div>
    </div>
  </div>

</div>
</main>
</div>

<%- include('../../../partials/scripts.ejs') %>
</body>
</html>
