<!doctype html>
<html class="no-js" lang="ar">

<%- include('../../../partials/head.ejs') %>

<body class="rtl">

  <div class="bmd-layout-container bmd-drawer-f-l avam-container animated bmd-drawer-in">

    <%- include('../../../partials/header.ejs') %>

    <div id="dw-s1" class="bmd-layout-drawer bg-faded">
      <%- include('../../../partials/sidebar/index.ejs') %>
    </div>

    <main class="bmd-layout-content">
      <div class="container-fluid">

        <!-- breadcrumb -->
        <div class="row m-1 pb-4 mb-3">
          <div class="col-12 p-2">
            <div class="page-header breadcrumb-header">
              <div class="row align-items-end">
                <div class="col-lg-8">
                  <h3 class="lite-text">إضافة طالب جديد</h3>
                  <span class="lite-text text-gray">أدخل بيانات الطالب الجديد</span>
                </div>
                <div class="col-lg-4">
                  <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/dashboard"><i class="fas fa-home"></i></a></li>
                    <li class="breadcrumb-item active">إضافة طالب</li>
                  </ol>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- form -->
        <div class="row m-1">
          <div class="col-12 p-2">
            <div class="card shade h-100">
              <div class="card-header">
                إضافة طالب جديد
              </div>
              <div class="card-body">

                     <!-- Flash Messages -->
         <% if (locals.success && locals.success.length > 0) { %>
  <div class="alert alert-success"><%= locals.success %></div>
<% } %>

<% if (locals.error && locals.error.length > 0) { %>
  <div class="alert alert-danger"><%= locals.error %></div>
<% } %>

                <form id="addStudentForm" action="/school-admin/students/create" method="POST" class="text-right">
                
                  <input type="hidden" name="_csrf" id="csrfToken" value="<%= csrfToken %>">
                  <div class="form-group">
                    <label>الاسم الكامل *</label>
                    <input type="text" name="fullName" id="studentNameInput" required class="form-control">
                    <small class="text-danger" id="nameError"></small>
                  </div>

                  <div class="form-group">
                    <label>رقم هوية الطالب *</label>
                    <input type="text" name="nationalId" required class="form-control">
                  </div>

                  <div class="form-group">
                    <label>هاتف ولي الأمر *</label>
                    <input type="text" name="phoneOfParents" required class="form-control">
                  </div>

                  <div class="form-group">
                    <label>العنوان</label>
                    <input type="text" name="address" class="form-control">
                  </div>

                  <div class="form-group">
                    <label>تاريخ الميلاد *</label>
                    <input type="date" name="dateOfBirth" required class="form-control">
                  </div>

                  <div class="form-group">
                    <label>الجنس</label>
                    <select name="gender" class="form-control">
                      <option value="Male">ذكر</option>
                      <option value="Female">أنثى</option>
                    </select>
                  </div>

                  <div class="form-group">
                    <label>الفصل *</label>
                    <select name="classId" id="classSelect" class="form-control" required>
                      <option value="">اختر الفصل</option>
                      <% classes.forEach(cls => { %>
                        <option value="<%= cls._id %>"><%= cls.name %></option>
                      <% }) %>
                    </select>
                    <small class="text-danger" id="classError"></small>
                  </div>

                  <div class="form-group">
                    <label>الشعبة *</label>
                    <select name="sectionId" id="sectionSelect" class="form-control" required>
                      <option value="">اختر الشعبة</option>
                      <% sections.forEach(sec => { %>
                        <option value="<%= sec._id %>" data-class="<%= sec.classId %>"><%= sec.name %></option>
                      <% }) %>
                    </select>
                    <small class="text-danger" id="sectionError"></small>
                  </div>

                  <div class="form-group">
                    <label>الحالة</label>
                    <select name="status" class="form-control">
                      <option value="active">نشط</option>
                      <option value="inactive">غير نشط</option>
                    </select>
                  </div>

                  <button type="submit" class="btn btn-success">إضافة الطالب</button>
                </form>

              </div>
            </div>
          </div>
        </div>

      </div>
    </main>

  </div>

  <%- include('../../../partials/scripts.ejs') %>

<script>
  const studentNameInput = document.getElementById('studentNameInput');
  const nameError = document.getElementById('nameError');
  const classSelect = document.getElementById('classSelect');
  const sectionSelect = document.getElementById('sectionSelect');
  const classError = document.getElementById('classError');
  const sectionError = document.getElementById('sectionError');
  const csrfToken = document.getElementById('csrfToken').value; // قراءة الـ token

  // فلترة الشعب حسب الفصل المختار
  classSelect.addEventListener('change', () => {
    const selectedClass = classSelect.value;
    Array.from(sectionSelect.options).forEach(opt => {
      if(opt.value === "") return;
      if(opt.dataset.class === selectedClass) {
        opt.style.display = '';
      } else {
        opt.style.display = 'none';
      }
    });
    sectionSelect.value = "";
  });

  // إرسال الفورم عبر AJAX
  document.getElementById('addStudentForm').addEventListener('submit', async e => {
    e.preventDefault();

    nameError.textContent = '';
    classError.textContent = '';
    sectionError.textContent = '';

    if(!studentNameInput.value.trim()){
      nameError.textContent = "اسم الطالب مطلوب";
      return;
    }

    if(!classSelect.value){
      classError.textContent = "يجب اختيار الفصل";
      return;
    }

    if(!sectionSelect.value){
      sectionError.textContent = "يجب اختيار الشعبة";
      return;
    }

    const formData = {
      fullName: studentNameInput.value,
      nationalId: document.querySelector('input[name="nationalId"]').value.trim(),
      phoneOfParents: document.querySelector('input[name="phoneOfParents"]').value,
      address: document.querySelector('input[name="address"]').value,
      dateOfBirth: document.querySelector('input[name="dateOfBirth"]').value,
      gender: document.querySelector('select[name="gender"]').value,
      classId: classSelect.value,
      sectionId: sectionSelect.value,
      status: document.querySelector('select[name="status"]').value
    };

    const res = await fetch('/school-admin/students/create', {
      method:'POST',
      headers:{'Content-Type':'application/json', 'CSRF-Token': csrfToken},
      body: JSON.stringify(formData)
    });

    const data = await res.json();

    if(data.errors){
      if(data.errors.fullName) nameError.textContent = data.errors.fullName;
      if(data.errors.classId) classError.textContent = data.errors.classId;
      if(data.errors.sectionId) sectionError.textContent = data.errors.sectionId;
      if(data.errors.general) alert(data.errors.general);
    } else if(data.success){
      alert(data.success);
      window.location.href = data.redirect || "/school-admin/students";
    }
  });
</script>

</body>
</html>
