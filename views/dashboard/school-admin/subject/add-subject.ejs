<%- include('../../../partials/head.ejs') %>

<body class="rtl">
  <div class="bmd-layout-container bmd-drawer-f-l avam-container animated bmd-drawer-in">
    <%- include('../../../partials/header.ejs') %>

    <div id="dw-s1" class="bmd-layout-drawer bg-faded">
      <%- include('../../../partials/sidebar/index.ejs') %>
    </div>

    <main class="bmd-layout-content">
      <div class="container-fluid">

        <!-- Page Header -->
        <div class="row m-1 pb-3 mb-3">
          <div class="col-12 p-2">
            <div class="page-header breadcrumb-header d-flex justify-content-between align-items-center">
              <div>
                <h3 class="lite-text mb-1"><i class="fas fa-book"></i> إضافة مادة جديدة</h3>
                <span class="lite-text text-gray">أدخل بيانات المادة الجديدة للمدرسة</span>
              </div>
              <div>
                <a href="/school-admin/subjects" class="btn btn-secondary">
                  <i class="fas fa-arrow-left"></i> العودة للمواد
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Alerts -->
        <% if (locals.error && locals.error.length > 0) { %>
          <div class="alert alert-danger"><%= locals.error %></div>
        <% } %>
        <% if (locals.success && locals.success.length > 0) { %>
          <div class="alert alert-success"><%= locals.success %></div>
        <% } %>

        <!-- CSRF Token Hidden -->
        <input type="hidden" id="csrfToken" value="<%= csrfToken %>">

        <!-- Form Card -->
        <div class="row m-1 justify-content-center">
          <div class="col-lg-6 col-md-8 col-12 p-2">
            <div class="card shade">
              <div class="card-header bg-primary text-white">
                <i class="fas fa-plus-circle"></i> بيانات المادة
              </div>
              <div class="card-body">
                <form id="addSubjectForm" class="text-right">
                  <div class="form-group">
                    <label>اسم المادة *</label>
                    <input type="text" name="name" id="subjectNameInput" required class="form-control">
                    <small class="text-danger" id="nameError"></small>
                  </div>

                  <div class="form-group">
                    <label>رمز المادة</label>
                    <input type="text" name="code" class="form-control">
                  </div>

                  <div class="form-group">
                    <label>الحالة</label>
                    <select name="status" class="form-control">
                      <option value="active">نشط</option>
                      <option value="inactive">غير نشط</option>
                    </select>
                  </div>

                  <div class="d-flex justify-content-between mt-3">
                    <button type="submit" class="btn btn-success">
                      <i class="fas fa-save"></i> إضافة المادة
                    </button>
                    <a href="/school-admin/subjects" class="btn btn-secondary">
                      <i class="fas fa-times"></i> إلغاء
                    </a>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>

      </div>
    </main>
  </div>

  <%- include('../../../partials/scripts.ejs') %>

<script>
const subjectNameInput = document.getElementById('subjectNameInput');
const nameError = document.getElementById('nameError');
const csrfToken = document.getElementById('csrfToken').value;

// AJAX للتحقق من الاسم الفريد عند الخروج من الحقل
subjectNameInput.addEventListener('blur', async () => {
  const name = subjectNameInput.value.trim();
  if(!name) return;

  try {
    const res = await fetch('/school-admin/subjects/create', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'CSRF-Token': csrfToken
      },
      body: JSON.stringify({ name, checkField: 'name' })
    });
    const data = await res.json();
    nameError.textContent = data.error || '';
  } catch(err) {
    console.error(err);
    nameError.textContent = "حدث خطأ أثناء التحقق";
  }
});

// إرسال الفورم
document.getElementById('addSubjectForm').addEventListener('submit', async e => {
  e.preventDefault();

  nameError.textContent = '';

  if(!subjectNameInput.value.trim()){
    nameError.textContent = "اسم المادة مطلوب";
    return;
  }

  const formData = {
    name: subjectNameInput.value,
    code: document.querySelector('input[name="code"]').value,
    status: document.querySelector('select[name="status"]').value
  };

  try {
    const res = await fetch('/school-admin/subjects/create', {
      method: 'POST',
      headers: {
        'Content-Type':'application/json',
        'CSRF-Token': csrfToken
      },
      body: JSON.stringify(formData)
    });

    const data = await res.json();

    if(data.errors){
      if(data.errors.name) nameError.textContent = data.errors.name;
      if(data.errors.general) alert(data.errors.general);
    } else if(data.success){
      alert(data.success);
      window.location.href="/school-admin/subjects";
    }
  } catch(err){
    console.error(err);
    alert("حدث خطأ أثناء الإرسال");
  }
});
</script>

</body>
</html>
