<%- include('../../partials/head.ejs') %>
<body class="rtl">
<div class="bmd-layout-container bmd-drawer-f-l avam-container animated bmd-drawer-in">
  <%- include('../../partials/header.ejs') %>
  <div id="dw-s1" class="bmd-layout-drawer bg-faded">
    <%- include('../../partials/sidebar/index.ejs') %>
  </div>
  <main class="bmd-layout-content">
    <div class="container-fluid">

      <div class="row m-1 pb-4 mb-3">
        <div class="col-12 p-2">
          <div class="page-header breadcrumb-header">
            <div class="row align-items-end">
              <div class="col-lg-8">
                <h3 class="lite-text">تعديل المدرسة</h3>
                <span class="lite-text text-gray">تعديل بيانات المدرسة الحالية</span>
              </div>
              <div class="col-lg-4 text-left">
                <a href="/super-admin/schools" class="btn btn-secondary">
                  <i class="fas fa-arrow-left"></i> العودة للمدارس
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row m-1">
        <div class="col-12 p-2">
          <div class="card shade h-100">
            <div class="card-body">
              <form id="editSchoolForm" action="/super-admin/schools/<%= school._id %>/edit" method="POST" class="text-right">
                <div class="form-group">
                  <label>اسم المدرسة *</label>
                  <input type="text" name="name" value="<%= school.name %>" class="form-control" required>
                  <small class="text-danger" id="nameError"></small>
                </div>
                <div class="form-group">
                  <label>كود المدرسة *</label>
                  <input type="text" name="code" value="<%= school.code %>" class="form-control" required>
                  <small class="text-danger" id="codeError"></small>
                </div>
                <div class="form-group">
                  <label>الهاتف</label>
                  <input type="text" name="phone" value="<%= school.phone %>" class="form-control">
                </div>
                <div class="form-group">
                  <label>البريد الإلكتروني</label>
                  <input type="email" name="email" value="<%= school.email %>" class="form-control">
                </div>
                <div class="form-group">
                  <label>العنوان</label>
                  <input type="text" name="address" value="<%= school.address %>" class="form-control">
                </div>

                <button type="submit" class="btn btn-success">تحديث المدرسة</button>
                <a href="/super-admin/schools" class="btn btn-secondary">إلغاء</a>
              </form>
            </div>
          </div>
        </div>
      </div>

    </div>
  </main>
</div>

<%- include('../../partials/scripts.ejs') %>
<script>
const editForm = document.getElementById('editSchoolForm');
const nameError = document.getElementById('nameError');
const codeError = document.getElementById('codeError');

editForm.addEventListener('submit', async e => {
  e.preventDefault();
  nameError.textContent = '';
  codeError.textContent = '';

  const formData = {
    name: editForm.name.value.trim(),
    code: editForm.code.value.trim(),
    phone: editForm.phone.value.trim(),
    email: editForm.email.value.trim(),
    address: editForm.address.value.trim()
  };

  const res = await fetch(editForm.action, {
    method: 'POST',
    headers: {'Content-Type': 'application/json'},
    body: JSON.stringify(formData)
  });

  const data = await res.json();

  if (data.errors) {
    if (data.errors.general) alert(data.errors.general);
  } else if (data.success) {
    alert(data.success);
    if (data.redirect) window.location.href = data.redirect;
  }
});
</script>
</body>
