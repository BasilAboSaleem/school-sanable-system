<%- include('../../../partials/head.ejs') %>
<body class="rtl">
<div class="bmd-layout-container bmd-drawer-f-l avam-container animated bmd-drawer-in">
  <%- include('../../../partials/header.ejs') %>
  <div id="dw-s1" class="bmd-layout-drawer bg-faded">
    <%- include('../../../partials/sidebar/index.ejs') %>
  </div>

  <main class="bmd-layout-content">
    <div class="container-fluid">

      <!-- Header -->
      <div class="row m-1 pb-4 mb-3">
        <div class="col-12 p-2">
          <div class="page-header breadcrumb-header d-flex justify-content-between align-items-center">
            <h3 class="lite-text">جميع الصادرات الخاصة بالمؤسسة</h3>
            <a href="/super-admin/dashboard" class="btn btn-secondary">
              <i class="fas fa-arrow-right"></i> رجوع
            </a>
          </div>
        </div>
      </div>

      <!-- Search Filters -->
      <div class="row m-1 mb-3">
        <div class="col-md-3 mb-2">
          <input type="text" id="supplierSearch" class="form-control" placeholder="ابحث بالمورد">
        </div>
        <div class="col-md-3 mb-2">
          <input type="text" id="schoolSearch" class="form-control" placeholder="ابحث بالمدرسة">
        </div>
        <div class="col-md-3 mb-2">
          <input type="text" id="amountSearch" class="form-control" placeholder="ابحث بالمبلغ">
        </div>
        <div class="col-md-3 mb-2">
          <input type="date" id="dateSearch" class="form-control" placeholder="ابحث بالتاريخ">
        </div>
      </div>

      <!-- جدول الصادرات -->
      <div class="row m-1">
        <div class="col-12 p-2">
          <div class="card shade">
            <div class="card-header">قائمة الصادرات</div>
            <div class="card-body p-0">
              <div class="table-responsive">
              <table class="table table-bordered table-hover text-center mb-0" id="exportsTable">
                <thead class="thead-light">
                  <tr>
                    <th>#</th>
                    <th>المورد / الجهة</th>
                    <th>المدرسة</th>
                    <th>المبلغ / الكمية</th>
                    <th>الوصف</th>
                    <th>تاريخ التصدير</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (exportsList.length === 0) { %>
                    <tr>
                      <td colspan="6" class="text-muted py-4">لا توجد صادرات مسجلة</td>
                    </tr>
                  <% } else { %>
                    <% exportsList.forEach((exp, idx) => { %>
                      <tr>
                        <td><%= idx + 1 %></td>
                        <td class="supplier"><%= exp.incomeId?.supplierId?.name || '—' %></td>
                        <td class="school"><%= exp.schoolId?.name || '—' %></td>
                        <td class="amount"><%= exp.amount.toLocaleString() %></td>
                        <td class="description"><%= exp.incomeId?.description || '—' %></td>
                        <td class="date"><%= exp.createdAt.toLocaleDateString() %></td>
                      </tr>
                    <% }) %>
                  <% } %>
                </tbody>
              </table>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </main>
</div>

<%- include('../../../partials/scripts.ejs') %>

<script>
const supplierInput = document.getElementById('supplierSearch');
const schoolInput = document.getElementById('schoolSearch');
const amountInput = document.getElementById('amountSearch');
const dateInput = document.getElementById('dateSearch');

[supplierInput, schoolInput, amountInput, dateInput].forEach(input => {
  input.addEventListener('input', filterTable);
});

function filterTable() {
  const supplierFilter = supplierInput.value.toLowerCase();
  const schoolFilter = schoolInput.value.toLowerCase();
  const amountFilter = amountInput.value;
  const dateFilter = dateInput.value;

  const rows = document.querySelectorAll('#exportsTable tbody tr');

  rows.forEach(row => {
    const supplier = row.querySelector('.supplier').textContent.toLowerCase();
    const school = row.querySelector('.school').textContent.toLowerCase();
    const amount = row.querySelector('.amount').textContent.replace(/,/g,''); // إزالة الفواصل
    const date = row.querySelector('.date').textContent;

    let show = true;
    if (supplierFilter && !supplier.includes(supplierFilter)) show = false;
    if (schoolFilter && !school.includes(schoolFilter)) show = false;
    if (amountFilter && amount !== amountFilter) show = false;
    if (dateFilter && date !== new Date(dateFilter).toLocaleDateString()) show = false;

    row.style.display = show ? '' : 'none';
  });
}
</script>

</body>
</html>
