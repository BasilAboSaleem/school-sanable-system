<%- include('../../../partials/head.ejs') %>
<body class="rtl">
<div class="bmd-layout-container bmd-drawer-f-l avam-container animated bmd-drawer-in">
  <%- include('../../../partials/header.ejs') %>

  <div id="dw-s1" class="bmd-layout-drawer bg-faded">
    <%- include('../../../partials/sidebar/index.ejs') %>
  </div>

  <main class="bmd-layout-content">
    <div class="container-fluid">

      <div class="row mb-3">
        <div class="col-md-8">
          <h3 class="lite-text">صادرات المؤسسة إلى المدارس</h3>
          <span class="text-muted">الواردات التي تم توزيعها على المدارس</span>
        </div>
        <div class="col-md-4 text-left">
          <a href="/super-admin/expenses/create" class="btn btn-success">
            <i class="fas fa-plus"></i> إضافة صادر جديد
          </a>
        </div>
      </div>

      <input type="text" id="searchInput"
        placeholder="ابحث باسم المدرسة أو الفئة"
        class="form-control mb-3">

      <table class="table table-bordered table-hover text-center">
        <thead class="thead-light">
          <tr>
            <th>#</th>
            <th>المدرسة</th>
            <th>المبلغ</th>
            <th>الفئة</th>
            <th>الوصف</th>
            <th>العمليات</th>
          </tr>
        </thead>

        <tbody id="expensesTableBody">
          <% if (expenses.length === 0) { %>
            <tr><td colspan="6">لا توجد صادرات مسجلة</td></tr>
          <% } %>

          <% expenses.forEach((exp, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td class="schoolName"><%= exp.schoolId?.name || '—' %></td>
              <td><%= exp.amount %></td>
              <td class="category"><%= exp.category || '—' %></td>
              <td><%= exp.description || '—' %></td>
              <td>
                <a href="/super-admin/expenses/<%= exp._id %>/view"
                   class="btn btn-secondary btn-sm">عرض</a>
                <a href="/super-admin/expenses/<%= exp._id %>/edit"
                   class="btn btn-warning btn-sm">تعديل</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>

    </div>
  </main>
</div>

<%- include('../../../partials/scripts.ejs') %>

<script>
const searchInput = document.getElementById('searchInput');
searchInput.addEventListener('input', () => {
  const filter = searchInput.value.toLowerCase();
  document.querySelectorAll('#expensesTableBody tr').forEach(row => {
    const school = row.querySelector('.schoolName')?.textContent.toLowerCase() || '';
    const category = row.querySelector('.category')?.textContent.toLowerCase() || '';
    row.style.display =
      school.includes(filter) || category.includes(filter) ? '' : 'none';
  });
});
</script>
</body>
