<%- include('../../../partials/head.ejs') %>
<body class="rtl">
<div class="bmd-layout-container bmd-drawer-f-l avam-container animated bmd-drawer-in">
  <%- include('../../../partials/header.ejs') %>
  <div id="dw-s1" class="bmd-layout-drawer bg-faded">
    <%- include('../../../partials/sidebar/index.ejs') %>
  </div>

  <main class="bmd-layout-content">
    <div class="container-fluid">

      <!-- Header -->
      <div class="row m-1 pb-4 mb-3">
        <div class="col-12 p-2">
          <div class="page-header breadcrumb-header d-flex justify-content-between align-items-center">
            <h3 class="lite-text">جميع واردات المدارس</h3>
            <a href="/super-admin/dashboard" class="btn btn-secondary">
              <i class="fas fa-arrow-right"></i> رجوع
            </a>
          </div>
        </div>
      </div>

      <!-- Accordion لكل مدرسة -->
      <div class="accordion" id="schoolsAccordion">
        <% schools.forEach((school, idx) => { %>
          <div class="card shade mb-2">
            <div class="card-header bg-primary text-white" id="heading<%= idx %>">
              <h5 class="mb-0 d-flex justify-content-between align-items-center">
                <button class="btn btn-link text-white" type="button" data-toggle="collapse" data-target="#collapse<%= idx %>" aria-expanded="false" aria-controls="collapse<%= idx %>">
                  <i class="fas fa-school"></i> <%= school.name %>
                </button>
                <span>المجموع الكلي: 
                  <strong><%= (school.incomes.reduce((sum, inc) => sum + inc.amount, 0)).toLocaleString() %></strong>
                </span>
              </h5>
            </div>

            <div id="collapse<%= idx %>" class="collapse" aria-labelledby="heading<%= idx %>" data-parent="#schoolsAccordion">
              <div class="card-body p-2">

                <!-- بيانات المدرسة -->
                <div class="mb-3">
                  <p><strong>البريد الإلكتروني:</strong> <%= school.email || '—' %></p>
                  <p><strong>الهاتف:</strong> <%= school.phone || '—' %></p>
                  <p><strong>العنوان:</strong> <%= school.address || '—' %></p>
                </div>

                <!-- جدول الواردات -->
                <div class="table-responsive">
                  <table class="table table-bordered table-hover text-center mb-0">
                    <thead class="thead-light">
                      <tr>
                        <th>#</th>
                        <th>المورد</th>
                        <th>المبلغ / الكمية</th>
                        <th>الوصف</th>
                        <th>تاريخ التسجيل</th>
                        
                      </tr>
                    </thead>
                    <tbody>
                      <% if (!school.incomes || school.incomes.length === 0) { %>
                        <tr><td colspan="6" class="text-muted py-4">لا توجد واردات لهذه المدرسة</td></tr>
                      <% } else { %>
                        <% school.incomes.forEach((income, i) => { %>
                          <tr>
                            <td><%= i + 1 %></td>
                            <td><%= income.supplier?.name || '—' %></td>
                            <td><%= income.amount.toLocaleString() %></td>
                            <td><%= income.description || '—' %></td>
                            <td><%= income.createdAt.toLocaleDateString() %></td>
                      
                          </tr>
                        <% }) %>
                      <% } %>
                    </tbody>
                  </table>
                </div>

              </div>
            </div>
          </div>
        <% }) %>
      </div>

    </div>
  </main>
</div>

<%- include('../../../partials/scripts.ejs') %>

<script>
  // Optional: expand first school by default
  $('#collapse0').addClass('show');
</script>

</body>
</html>
