<!doctype html>
<html class="no-js" lang="ar">

<%- include('../../partials/head.ejs') %>

<body class="rtl">

<div class="bmd-layout-container bmd-drawer-f-l avam-container animated bmd-drawer-in">

  <%- include('../../partials/header.ejs') %>

  <div id="dw-s1" class="bmd-layout-drawer bg-faded">
    <%- include('../../partials/sidebar/super-admin.ejs') %>
  </div>

  <main class="bmd-layout-content">
    <div class="container-fluid">

      <!-- Breadcrumb -->
      <div class="row m-1 pb-4 mb-3">
        <div class="col-12 p-2">
          <div class="page-header breadcrumb-header">
            <div class="row align-items-end">
              <div class="col-lg-8">
                <h3 class="lite-text">واردات المؤسسة</h3>
                <span class="lite-text text-gray">جميع الواردات المسجلة لدى السوبر أدمن</span>
              </div>
              <div class="col-lg-4 text-left">
                <a href="/super-admin/incomes/create" class="btn btn-success">
                  <i class="fas fa-plus"></i> إضافة وارد جديد
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Flash Messages -->
      <% if (locals.success && locals.success.length > 0) { %>
        <div class="alert alert-success"><%= locals.success %></div>
      <% } %>
      <% if (locals.error && locals.error.length > 0) { %>
        <div class="alert alert-danger"><%= locals.error %></div>
      <% } %>

      <!-- Search -->
      <div class="row m-1 mb-2">
        <div class="col-12">
          <input type="text" id="searchInput" class="form-control"
                 placeholder="ابحث باسم المورد أو الوصف">
        </div>
      </div>

      <!-- Incomes Table -->
      <div class="row m-1">
        <div class="col-12 p-2">
          <div class="card shade h-100">
            <div class="card-body p-0">

              <table class="table table-bordered table-hover text-center mb-0">
                <thead class="thead-light">
                  <tr>
                    <th>#</th>
                    <th>المورد</th>
                    <th>المبلغ</th>
                    <th>الوصف</th>
                    <th>تاريخ التسجيل</th>
                    <th>العمليات</th>
                  </tr>
                </thead>
                <tbody id="incomesTableBody">

                  <% if (incomes.length === 0) { %>
                    <tr>
                      <td colspan="6">لا توجد واردات مسجلة</td>
                    </tr>
                  <% } %>

                  <% incomes.forEach((income, index) => { %>
                    <tr>
                      <td><%= index + 1 %></td>
                      <td class="supplierName">
                        <%= income.supplierId ? income.supplierId.name : '—' %>
                      </td>
                      <td><%= income.amount %></td>
                      <td class="description">
                        <%= income.description || '—' %>
                      </td>
                      <td>
                        <%= income.createdAt.toLocaleDateString() %>
                      </td>
                      <td>
                        <a href="/super-admin/incomes/<%= income._id %>/view"
                           class="btn btn-secondary btn-sm">عرض</a>

                        <a href="/super-admin/incomes/<%= income._id %>/edit"
                           class="btn btn-warning btn-sm">تعديل</a>
                      </td>
                    </tr>
                  <% }) %>

                </tbody>
              </table>

            </div>
          </div>
        </div>
      </div>

    </div>
  </main>
</div>

<%- include('../../partials/scripts.ejs') %>

<script>
  const searchInput = document.getElementById('searchInput');
  searchInput.addEventListener('input', () => {
    const filter = searchInput.value.toLowerCase();
    const rows = document.querySelectorAll('#incomesTableBody tr');

    rows.forEach(row => {
      const supplier = row.querySelector('.supplierName')?.textContent.toLowerCase() || '';
      const description = row.querySelector('.description')?.textContent.toLowerCase() || '';
      row.style.display =
        supplier.includes(filter) || description.includes(filter)
          ? ''
          : 'none';
    });
  });
</script>

</body>
</html>
