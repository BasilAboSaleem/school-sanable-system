<%- include('../../../partials/head.ejs') %>
<body class="rtl">

<div class="bmd-layout-container bmd-drawer-f-l avam-container animated bmd-drawer-in">
  <%- include('../../../partials/header.ejs') %>

  <div id="dw-s1" class="bmd-layout-drawer bg-faded">
    <%- include('../../../partials/sidebar/index.ejs') %>
  </div>

  <main class="bmd-layout-content">
    <div class="container-fluid">

      <!-- Page Header -->
      <div class="row m-1 pb-3 mb-3">
        <div class="col-12 p-2">
          <div class="page-header breadcrumb-header d-flex justify-content-between align-items-center">
            <div>
              <h3 class="lite-text mb-1">
                <i class="fas fa-user-shield"></i> تعديل المدير: <%= admin.name %>
              </h3>
              <span class="lite-text text-gray">تحديث بيانات المدير وربطه بالمدرسة</span>
            </div>
            <div>
              <a href="/super-admin/school-admins" class="btn btn-secondary">
                <i class="fas fa-arrow-right"></i> رجوع
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Edit Form -->
      <div class="row m-1">
        <div class="col-12 p-2">
          <div class="card shade">
            <div class="card-header bg-warning text-dark">
              <i class="fas fa-user-shield"></i> بيانات المدير
            </div>

            <div class="card-body">
              <form id="editAdminForm" action="/super-admin/school-admins/<%= admin._id %>/edit" method="POST">
                <input type="hidden" name="_csrf" id="csrfToken" value="<%= csrfToken %>">

                <div class="row">

                  <div class="col-md-6 form-group">
                    <label>الاسم *</label>
                    <input type="text" name="name" class="form-control" value="<%= admin.name %>" required>
                  </div>

                  <div class="col-md-6 form-group">
                    <label>البريد الإلكتروني *</label>
                    <input type="email" name="email" class="form-control" value="<%= admin.email %>" required>
                  </div>

                  <div class="col-md-6 form-group">
                    <label>الهاتف</label>
                    <input type="text" name="phone" class="form-control" value="<%= admin.phone || '' %>">
                  </div>

                  <div class="col-md-6 form-group">
                    <label>المدرسة المرتبطة</label>
                    <select name="schoolId" class="form-control">
                      <option value="">اختر المدرسة</option>
                      <% schools.forEach(school => { %>
                        <option value="<%= school._id %>" 
                          <%= admin.schoolId && admin.schoolId.toString() === school._id.toString() ? 'selected' : '' %>>
                          <%= school.name %> (<%= school.status === 'active' ? 'نشطة' : 'غير نشطة' %>)
                        </option>
                      <% }) %>
                    </select>
                  </div>

                </div>

                <hr>

                <button type="submit" class="btn btn-success">
                  <i class="fas fa-save"></i> حفظ التعديلات
                </button>
                <a href="/super-admin/school-admins" class="btn btn-secondary">إلغاء</a>

              </form>
            </div>
          </div>
        </div>
      </div>

    </div>
  </main>
</div>

<%- include('../../../partials/scripts.ejs') %>

<script>
const editForm = document.getElementById('editAdminForm');
const csrfToken = document.getElementById('csrfToken').value;

editForm.addEventListener('submit', async e => {
  e.preventDefault();

  const formData = {
    name: editForm.name.value.trim(),
    email: editForm.email.value.trim(),
    phone: editForm.phone.value.trim(),
    schoolId: editForm.schoolId.value
  };

  const res = await fetch(editForm.action, {
    method: 'POST',
    headers: { 'Content-Type': 'application/json', 'CSRF-Token': csrfToken },
    body: JSON.stringify(formData)
  });

  const data = await res.json();

  if (data.errors) {
    alert(data.errors.general || 'حدث خطأ');
  } else if (data.success) {
    alert(data.success);
    window.location.href = data.redirect;
  }
});
</script>

</body>
</html>
