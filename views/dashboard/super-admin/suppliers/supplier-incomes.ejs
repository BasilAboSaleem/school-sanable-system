<%- include('../../../partials/head.ejs') %>
<body class="rtl">
<div class="bmd-layout-container bmd-drawer-f-l avam-container animated bmd-drawer-in">
  <%- include('../../../partials/header.ejs') %>
  <div id="dw-s1" class="bmd-layout-drawer bg-faded">
    <%- include('../../../partials/sidebar/index.ejs') %>
  </div>

  <main class="bmd-layout-content">
    <div class="container-fluid">

      <!-- Header / Breadcrumb -->
      <div class="row m-1 pb-4 mb-3">
        <div class="col-12 p-2">
          <div class="page-header breadcrumb-header d-flex justify-content-between align-items-center">
            <h3 class="lite-text">واردات المورد: <%= supplier.name %></h3>
            <a href="/super-admin/suppliers" class="btn btn-secondary">
              <i class="fas fa-arrow-right"></i> رجوع
            </a>
          </div>
        </div>
      </div>

      <!-- بطاقة بيانات المورد -->
      <div class="row m-1 mb-3">
        <div class="col-12 p-2">
          <div class="card shade">
            <div class="card-header bg-secondary text-white">
              <i class="fas fa-info-circle"></i> بيانات المورد
            </div>
            <div class="card-body">
              <p><strong>اسم المورد:</strong> <%= supplier.name %></p>
              <p><strong>البريد الإلكتروني:</strong> <%= supplier.email || '—' %></p>
              <p><strong>الهاتف:</strong> <%= supplier.phone || '—' %></p>
              <p><strong>العنوان:</strong> <%= supplier.address || '—' %></p>
              <p><strong>ملاحظات:</strong> <%= supplier.notes || '—' %></p>
              <p><strong>تاريخ التسجيل:</strong> <%= supplier.createdAt.toLocaleDateString('ar-EG') %></p>
            </div>
          </div>
        </div>
      </div>

      <!-- صندوق البحث -->
      <div class="row m-1 mb-3">
        <div class="col-lg-4 col-md-6">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-search"></i></span>
            </div>
            <input type="text" id="searchInput" class="form-control" placeholder="ابحث بالمبلغ أو التاريخ">
          </div>
        </div>
      </div>

      <!-- جدول واردات المورد -->
      <div class="row m-1">
        <div class="col-12 p-2">
          <div class="card shade">
            <div class="card-header">قائمة الواردات</div>
            <div class="card-body p-0">
              <div class="table-responsive">
              <table class="table table-bordered table-hover text-center mb-0">
                <thead class="thead-light">
                  <tr>
                    <th>#</th>
                    <th>المبلغ / الكمية</th>
                    <th>الوصف</th>
                    <th>تاريخ التسجيل</th>
                    <th>العمليات</th>
                  </tr>
                </thead>
                <tbody id="incomesTableBody">
                  <% if (incomes.length === 0) { %>
                    <tr><td colspan="5" class="text-muted py-4">لا توجد واردات لهذا المورد</td></tr>
                  <% } else { %>
                    <% incomes.forEach((income, idx) => { %>
                      <tr>
                        <td><%= idx+1 %></td>
                        <td class="amount"><%= income.amount %></td>
                        <td class="description"><%= income.description || '—' %></td>
                        <td class="createdAt"><%= income.createdAt.toLocaleDateString() %></td>
                        <td>
                          <a href="/super-admin/incomes/<%= income._id %>/view" class="btn btn-secondary btn-sm">
                            <i class="fas fa-eye"></i> عرض
                          </a>
                          <a href="/super-admin/incomes/<%= income._id %>/edit" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> تعديل
                          </a>
                        </td>
                      </tr>
                    <% }) %>
                  <% } %>
                </tbody>
              </table>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </main>
</div>

<%- include('../../../partials/scripts.ejs') %>

<script>
const searchInput = document.getElementById('searchInput');
const rows = document.querySelectorAll('#incomesTableBody tr');

searchInput.addEventListener('input', () => {
  const filter = searchInput.value.toLowerCase();
  
  rows.forEach(row => {
    const amount = row.querySelector('.amount')?.textContent.toLowerCase() || '';
    const date = row.querySelector('.createdAt')?.textContent.toLowerCase() || '';
    const description = row.querySelector('.description')?.textContent.toLowerCase() || '';

    if (amount.includes(filter) || date.includes(filter) || description.includes(filter)) {
      row.style.display = '';
    } else {
      row.style.display = 'none';
    }
  });
});
</script>

</body>
</html>
