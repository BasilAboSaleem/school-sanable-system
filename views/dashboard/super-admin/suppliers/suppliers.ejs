<%- include('../../../partials/head.ejs') %>
<body class="rtl">
<div class="bmd-layout-container bmd-drawer-f-l avam-container animated bmd-drawer-in">

  <%- include('../../../partials/header.ejs') %>
  <div id="dw-s1" class="bmd-layout-drawer bg-faded">
    <%- include('../../../partials/sidebar/index.ejs') %>
  </div>

  <main class="bmd-layout-content">
    <div class="container-fluid">

      <div class="row m-1 pb-4 mb-3">
        <div class="col-12 p-2">
          <div class="page-header breadcrumb-header d-flex justify-content-between align-items-center">
            <h3 class="lite-text">الموردين</h3>
            <span class="lite-text text-gray">جميع الموردين المسجلين في النظام</span>
          </div>
        </div>
      </div>

      <div class="row m-1 mb-3">
        <div class="col-12 p-2">
          <div class="card shade">
            <div class="card-header">قائمة الموردين</div>
            <div class="card-body p-0">
               <!-- Flash messages -->
                <% if (locals.success && locals.success.length > 0) { %>
                  <div class="alert alert-success"><%= success %></div>
                <% } %>
                <% if (locals.error && locals.error.length > 0) { %>
                  <div class="alert alert-danger"><%= error %></div>
                <% } %>
              <div class="table-responsive">
              <table class="table table-bordered table-hover text-center mb-0">
                <thead class="thead-light">
                  <tr>
                    <th>#</th>
                    <th>اسم المورد</th>
                    <th>البريد الإلكتروني</th>
                    <th>الهاتف</th>
                    <th>عدد الواردات</th>
                    <th>العمليات</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (suppliers.length === 0) { %>
                    <tr><td colspan="6" class="text-muted py-4">لا يوجد موردين</td></tr>
                  <% } else { %>
                    <% suppliers.forEach((supplier, idx) => { %>
                      <tr>
                        <td><%= idx+1 %></td>
                        <td><%= supplier.name %></td>
                        <td><%= supplier.email || '—' %></td>
                        <td><%= supplier.phone || '—' %></td>
                        <td>
                          <%= supplier.incomesCount || 0 %>
                        </td>
                        <td>
                          <a href="/super-admin/suppliers/<%= supplier._id %>/incomes" class="btn btn-primary btn-sm">
                            <i class="fas fa-eye"></i> عرض الواردات
                          </a>
                        </td>
                      </tr>
                    <% }) %>
                  <% } %>
                </tbody>
              </table>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </main>
</div>
<%- include('../../../partials/scripts.ejs') %>
</body>
</html>
