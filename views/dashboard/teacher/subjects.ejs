<%- include('../../partials/head.ejs') %>

<body class="rtl">

<div class="bmd-layout-container bmd-drawer-f-l avam-container animated bmd-drawer-in">

  <%- include('../../partials/header.ejs') %>
  <div id="dw-s1" class="bmd-layout-drawer bg-faded">
    <%- include('../../partials/sidebar/index.ejs') %>
  </div>

  <main class="bmd-layout-content">
    <div class="container-fluid">
          <input type="hidden" name="_csrf" id="csrfToken" value="<%= csrfToken %>">


      <!-- Breadcrumb -->
      <div class="row m-1 pb-4 mb-3">
        <div class="col-12 p-2">
          <div class="page-header breadcrumb-header">
            <div class="row align-items-end">
              <div class="col-lg-8">
                <div class="page-header-title text-left-rtl">
                  <h3 class="lite-text">موادي</h3>
                  <span class="lite-text text-gray">جميع المواد التي تدرّسها</span>
                </div>
              </div>
              <div class="col-lg-4">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item">
                    <a href="/teacher/dashboard"><i class="fas fa-home"></i></a>
                  </li>
                  <li class="breadcrumb-item active">موادي</li>
                </ol>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- رسائل -->
      <% if (error) { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>

      <!-- جدول المواد -->
      <div class="row m-1">
        <div class="col-12 p-2">
          <div class="card shade h-100">
            <div class="card-header">قائمة موادي</div>

            <div class="card-body">

              <table class="table table-bordered table-hover text-center">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>اسم المادة</th>
                    <th>الكود</th>
                    <th>الحالة</th>
                  </tr>
                </thead>

                <tbody>
                  <% if (subjects.length === 0) { %>
                    <tr>
                      <td colspan="4">لا توجد مواد</td>
                    </tr>
                  <% } %>

                  <% subjects.forEach((sub, index) => { %>
                    <tr>
                      <td><%= index + 1 %></td>
                      <td><%= sub.name %></td>
                      <td><%= sub.code || "—" %></td>
                      <td>
                        <% if (sub.status === "active") { %>
                          <span class="badge badge-success">مفعلة</span>
                        <% } else { %>
                          <span class="badge badge-secondary">غير مفعلة</span>
                        <% } %>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>

            </div>
          </div>
        </div>
      </div>

    </div>
  </main>
</div>

<%- include('../../partials/scripts.ejs') %>
<script>  
  const csrfToken = document.getElementById('csrfToken').value;
  </script>
</body>
</html>
